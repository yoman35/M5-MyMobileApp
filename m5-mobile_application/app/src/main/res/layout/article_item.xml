<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:elevation="5dp">

        <TextView
            android:id="@+id/article_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_item_image"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/article_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_item_title"
            android:gravity="center"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/article_item_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_item_date"
            android:gravity="center" />

        <ImageView
            android:id="@+id/article_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/article_item_image_description"
            android:scaleType="center" />

    </android.support.v7.widget.CardView>


</RelativeLayout>