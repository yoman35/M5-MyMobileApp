<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:background="@android:color/white"
    android:paddingEnd="@dimen/margin_16"
    android:paddingLeft="@dimen/margin_16"
    android:paddingRight="@dimen/margin_16"
    android:paddingStart="@dimen/margin_16">

    <ImageView
        android:id="@+id/menu_item_logo"
        android:layout_width="@dimen/menu_item_height"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/menu_item_logo"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:layout_toRightOf="@id/menu_item_logo"
        android:layout_toEndOf="@id/menu_item_logo"/>

    <TextView
        android:id="@+id/menu_item_counter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end|center_vertical"
        android:textColor="@color/colorDivider"/>

</RelativeLayout>